@model List<AppUser>
@{
    ViewData["Title"] = "Users";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h3 class="mt-4">Members List</h3>
<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>Id</th>
            <th>UserName</th>
            <th>Email</th>
            <th>City</th>
            <th>Gender</th>
            <th>Birth Day</th>
        </tr>
    </thead>
    <tbody>
        @if (Model.Count() <= 0)
        {
            <tr>
                <td colspan="3">
                    No users found
                </td>
            </tr>
        }
        else
        {
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Id</td>
                    <td>@item.UserName</td>
                    <td>@item.Email</td>
                    <td>@item.City</td>
                    <td>@item.Gender</td>
                    <td>@(item.BirthDay == null ? "-" : item.BirthDay.Value.ToShortDateString())</td>
                </tr>
            }

        }
    </tbody>


</table>

