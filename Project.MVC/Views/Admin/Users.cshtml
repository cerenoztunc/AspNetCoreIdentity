@model List<AppUser>
@{
    ViewData["Title"] = "Users";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h3 class="mt-4">Members List</h3>
<table class="table table-bordered table-striped table-responsive">
    <thead>
        <tr>
            <th>Id</th>
            <th>UserName</th>
            <th>Email</th>
            <th>Password</th>
            <th>Roles</th>
            <th>
                Transactions
            </th>

        </tr>
    </thead>
    <tbody>
        @if (Model.Count() <= 0)
        {
            <tr>
                <td colspan="3">
                    No users found
                </td>
            </tr>
        }
        else
        {
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Id</td>
                    <td>@item.UserName</td>
                    <td>@item.Email</td>
                    <td>@item.PasswordHash</td>
                    <td user-roles="@item.Id"></td>
                    
                    <td>
                        <a class="btn btn-success" asp-action="RoleAssign" asp-route-id="@item.Id">
                            Assign Role
                        </a>
                        <hr />
                        <a class="btn btn-success" asp-action="UsersChangePassword" asp-route-id="@item.Id">
                            Change Password
                        </a>
                    </td>
                </tr>
            }

        }
    </tbody>


</table>

