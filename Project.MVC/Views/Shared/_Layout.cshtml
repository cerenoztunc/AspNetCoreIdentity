<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <script src="~/lib/jquery/jquery.js"></script>
    <script src="~/lib/jquery-validate/jquery.validate.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.js"></script>
    <link href="~/lib/twitter-bootstrap/css/bootstrap.css" rel="stylesheet" />
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
        <div class="container">
            <a class="navbar-brand" asp-action="Index">Identity.com</a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav mr-auto">
                    <li class="nav-item active">
                        <a class="btn btn-link text-dark" asp-action="Index">Home </a>
                        <a class="btn btn-link text-dark" asp-action="Index" asp-controller="Admin">Admin Page </a>
                    </li>
                </ul>
                <ul class="navbar-nav">
                    <li>
                        <a class="btn btn-link text-dark" asp-action="SignUp">Sign Up </a>
                        <a class="btn btn-link text-dark" asp-action="LogIn">Log In </a>
                    </li>
                </ul>
                
                  
            </div>
        </div>
       
    </nav>
    <div class="container">
        @RenderBody()
    </div>
</body>
</html>
