<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <script src="~/lib/jquery/jquery.js"></script>
    <script src="~/lib/jquery-validate/jquery.validate.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.js"></script>
    <link href="~/lib/twitter-bootstrap/css/bootstrap.css" rel="stylesheet" />
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <div class="container">
            <a class="navbar-brand" asp-action="Index">Identity.com</a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav mr-auto">
                    <li class="nav-item active">
                        <a class="nav-link text-light" asp-controller="Admin" asp-action="Index">Member Home Page </a>
                    </li>
                </ul>
                <ul class="navbar-nav">
                    <li>
                        <a class="btn btn-link text-light" asp-action="LogOut" asp-controller="Member" asp-route-returnUrl="/Home/Index">Log Out</a>
                    </li>
                </ul>
                
            </div>
        </div>
    </nav>
    <div class="container">
        <div class="row">
            <div class="col-md-8">
                @RenderBody()
            </div>
            <div class="col-md-4">
                <h3 class="mt-4">Menu</h3>
                <a class="btn btn-danger btn-block" asp-action="Users" asp-controller="Admin">Users</a>
                <a class="btn btn-danger btn-block" asp-action="Roles" asp-controller="Admin">Roles</a>
            </div>
            
        </div>
        
    </div>
</body>
</html>
