@model Project.MVC.ViewModels.PasswordResetViewModel

@{
    ViewData["Title"] = "ResetPasswordConfirm";
}

@if (ViewBag.status == "successfull")
{
    <div class="alert alert-info mt-4">
        Your password has been successfully reset. You can login with your new password.

        <a class="btn btn-link" asp-action="LogIn" asp-controller="Home">
            Click to login
        </a>
    </div>

}
else
{
    <div class="row">
        <div class="col-md-4 offset-md-4">
            <h4 class="mt-4">Password Reset Form</h4>
            <hr />
            <form asp-action="ResetPasswordConfirm">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div class="form-group">
                    <label asp-for="NewPassword" class="control-label"></label>
                    <input asp-for="NewPassword" class="form-control" />
                    <span asp-validation-for="NewPassword" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Create New Password" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>

}



