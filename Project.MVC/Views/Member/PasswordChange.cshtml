@model Project.MVC.ViewModels.PasswordChangeViewModel

@{
    ViewData["Title"] = "PasswordChange";
    Layout = "~/Views/Shared/_MemberLayout.cshtml";
}

@if (ViewBag.success == "true")
{
    <div class="alert alert-info mt-4">
        Your password has been updated! 
        <p class="text-danger">Web page loads after 5 seconds.</p>
    </div>
    <script>
        setTimeout(function () {
            window.location.href = 'https://localhost:44386/Member';
        }, 5000);
    </script>
}
else
{
    <div class="row mt-4">
        <div class="col-md-6 offset-md-3">
            <h4>Password Change Form</h4>
            <hr />
            <form asp-action="PasswordChange">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="OldPassword" class="control-label"></label>
                    <input asp-for="OldPassword" class="form-control" />
                    <span asp-validation-for="OldPassword" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="NewPassword" class="control-label"></label>
                    <input asp-for="NewPassword" class="form-control" />
                    <span asp-validation-for="NewPassword" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="ConfirmPassword" class="control-label"></label>
                    <input asp-for="ConfirmPassword" class="form-control" />
                    <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Change Password" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>

}


