@model UserViewModel
@{
    ViewData["Title"] = "Index";
    Layout = "_MemberLayout";
}

<h3 class="text-center mt-4 mb-4">User Information</h3>

<div class="row">
    <div class="col-sm-3">
        <img style="width:100%; height:100%;" src="@Model.Picture" />
    </div>
    <div class="col-sm-9">
        <table class="table table-bordered table-striped">
            <tr>
                <td>User Name: </td>
                <td>@Model.UserName</td>
            </tr>
            <tr>
                <td>Email: </td>
                <td>@Model.Email</td>
            </tr>
            <tr>
                <td>Phone Number: </td>
                <td>@Model.PhoneNumber</td>
            </tr>
            <tr>
                <td>Birth Day: </td>
                <td>@(Model.BirthDay == null ? "-" : Model.BirthDay.Value.ToShortDateString())</td>
            </tr>
            <tr>
                <td>City: </td>
                <td>@(Model.City == null ?"-" :Model.City)</td>
            </tr>
            <tr>
                <td>Gender: </td>
                <td>@Model.Gender</td>
            </tr>
        </table>
    </div>
</div>
